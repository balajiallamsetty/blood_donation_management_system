{
  "info": {
    "name": "Blood Donation Backend",
    "_postman_id": "bd-backend-collection",
    "description": "Collection to verify signup/login and requests endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Signup",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Alice Donor\",\n  \"email\": \"alice@example.com\",\n  \"password\": \"secret123\",\n  \"role\": \"donor\",\n  \"bloodGroup\": \"A+\",\n  \"phone\": \"1234567890\"\n}"
        },
        "url": { "raw": "{{base_url}}/api/auth/signup", "host": ["{{base_url}}"], "path": ["api","auth","signup"] }
      },
      "response": []
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"alice@example.com\",\n  \"password\": \"secret123\"\n}" },
        "url": { "raw": "{{base_url}}/api/auth/login", "host": ["{{base_url}}"], "path": ["api","auth","login"] }
      },
      "response": []
    },
    {
      "name": "Create Request (protected)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"bloodType\": \"A+\",\n  \"units\": 2,\n  \"location\": \"City Hospital\",\n  \"hospitalName\": \"City Hospital\",\n  \"contact\": \"9876543210\"\n}" },
        "url": { "raw": "{{base_url}}/api/requests", "host": ["{{base_url}}"], "path": ["api","requests"] }
      },
      "response": []
    },
    {
      "name": "Get Requests",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{base_url}}/api/requests", "host": ["{{base_url}}"], "path": ["api","requests"] }
      },
      "response": []
    },
    {
      "name": "Get Request by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{base_url}}/api/requests/:id", "host": ["{{base_url}}"], "path": ["api","requests",":id"] }
      },
      "response": []
    }
  ],
  "event": []
}
